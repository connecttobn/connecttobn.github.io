<mvc:View
	controllerName="connecttobn.home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	height="100%">
	<tnt:ToolHeader>
		<Button icon="sap-icon://home" type="Transparent" press="onHomePress">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" />
			</layoutData>
		</Button>

		<!-- <core:Icon src="sap-icon://activate">
		</core:Icon> -->
		<Text text="Sunil B N Portfolio" wrapping="false">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" />
			</layoutData>
		</Text>
		<ToolbarSpacer />
		<IconTabHeader id="iconTabHeader"
			selectedKey="invalidKey"
			select="onSelectTab"
			showOverflowSelectList="true"
			backgroundDesign="Transparent"
			mode="Inline">
			<layoutData>
				<OverflowToolbarLayoutData
					priority="NeverOverflow"
					shrinkable="true" />
			</layoutData>
			<items>
				<IconTabFilter text="About">
				</IconTabFilter>
				<IconTabFilter text="Skills">
				</IconTabFilter>
				<IconTabFilter text="Portfolio">
				</IconTabFilter>
				<IconTabFilter text="Achievements">
				</IconTabFilter>
				<IconTabFilter text="Contact">
				</IconTabFilter>
			</items>
		</IconTabHeader>
<!--
		<ToolbarSpacer>
			<layoutData>
				<OverflowToolbarLayoutData priority="Disappear" minWidth="16px" />
			</layoutData>
		</ToolbarSpacer> -->
		<Button icon="sap-icon://business-card" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" />
			</layoutData>
		</Button>

	</tnt:ToolHeader>
	<Panel>
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
			header="UNDER CONSTRUCTION"
			frameType="TwoByOne" press="press">
			<TileContent footer="tasks are pending">
				<FeedContent contentText="I am trying to build this in SAPUI5 in free time" value="1729" />
			</TileContent>
		</GenericTile>

		<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
			<tiles>
				<GenericTile
					backgroundImage="sample.jpg"
					frameType="TwoByOne" press="press">
					<TileContent footer="August 21, 2016">
						<NewsContent
							contentText="This in under construction"
							subheader="As of Today" />
					</TileContent>
				</GenericTile>
				<GenericTile
					backgroundImage="test-resources/sap/m/demokit/sample/GenericTileAsFeedTile/images/NewsImage2.png"
					frameType="TwoByOne" press="press">
					<TileContent footer="August 21, 2016">
						<NewsContent
							contentText="I will build this soon"
							subheader="As of yesterday" />
					</TileContent>
				</GenericTile>
			</tiles>
		</SlideTile>
		<Label visible="false"
			id="labelId"
			text="Under Developement"/>
	</Panel>
</mvc:View>
